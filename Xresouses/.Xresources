! ─── Font Settings ─────────────────────────────────────────────────────────
XTerm*faceName: FiraCode Nerd Font
XTerm*faceSize: 10
XTerm*renderFont: true
XTerm*utf8: 1
XTerm*locale: true
XTerm*utf8Title: true

! ─── Cursor Settings ──────────────────────────────────────────────────────
XTerm*cursorColor: #ff79c6
XTerm*cursorBlink: true

! ─── Terminal Type and Input ──────────────────────────────────────────────
XTerm*termName: xterm-256color
XTerm*eightBitInput: false
XTerm*metaSendsEscape: true

! ─── Scrollbar ────────────────────────────────────────────────────────────
XTerm*scrollBar: false
XTerm*rightScrollBar: true
XTerm*scrollBar_floating: true

! ─── Window Title ─────────────────────────────────────────────────────────
XTerm*titleBar: true
XTerm*title: GhostTerm
XTerm*iconName: GhostTerm

! ─── Dracula Color Scheme ─────────────────────────────────────────────────
XTerm*background: #282a36
XTerm*foreground: #f8f8f2
